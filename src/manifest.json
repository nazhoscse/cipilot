{
  "manifest_version": 3,
  "name": "CI Detector",
  "version": "1.0",
  "description": "A Chrome extension to detect CI configuration files in GitHub repositories.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://api.github.com/*",
    "http://localhost:5200/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "js": [
        "utils.js",
        "banner.js",
        "ciDetection.js",
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}