# CIPilot Backend Environment Variables
# Copy this file to .env and fill in your values

# Server-side GitHub Personal Access Token for fork/PR creation
# This allows users to create PRs without configuring their own token
# Required scopes: repo + workflow (classic PAT) or Contents + Workflows (fine-grained)
GITHUB_PAT=ghp_your_token_here

# SQLite database path (optional, defaults to ./data/cipilot.db)
# DATABASE_PATH=/path/to/cipilot.db

# ============================================================================
# Reviewer Access Configuration (for academic/paper reviewers)
# ============================================================================
# Secret key for encrypting reviewer access tokens (32+ chars recommended)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
REVIEWER_ACCESS_SECRET=your_secret_key_here

# Default LLM provider for reviewers (pre-configured, no API key needed)
REVIEWER_DEFAULT_PROVIDER=xai
REVIEWER_DEFAULT_API_KEY=your_xai_api_key_here
REVIEWER_DEFAULT_MODEL=grok-beta
